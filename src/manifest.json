{
  "manifest_version": 3,
  "name": "InfiniTabs",
  "version": "0.3.5",
  "description": "Unlimited tabs. Zero clutter. Near-zero RAM.",
  "permissions": [
    "tabs",
    "bookmarks",
    "windows",
    "storage",
    "sidePanel",
    "favicon",
    "tabGroups"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "action": {
    "default_title": "Open InfiniTabs Sidebar"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": [
        "img/icons/favicon-red.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
