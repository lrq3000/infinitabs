{
  "manifest_version": 3,
  "name": "InfiniTabs",
  "version": "0.2.8",
  "description": "Unlimited tabs. Zero clutter. Near-zero RAM.",
  "permissions": [
    "tabs",
    "bookmarks",
    "windows",
    "storage",
    "sidePanel",
    "favicon"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "action": {
    "default_title": "Open InfiniTabs Sidebar"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
